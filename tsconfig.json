{
  "compilerOptions": {
    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module System */
    "module": "CommonJS",
    "target": "ES2022",
    "moduleResolution": "Node",

    /* Path Alias */
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    /* Type Safety */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Interop */
    "esModuleInterop": true,
    "resolveJsonModule": true,

    /* Performance */
    "skipLibCheck": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
